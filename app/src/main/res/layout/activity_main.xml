<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="10"
    android:background="#212121">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="OFF"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:id="@+id/activateBtn"
            android:background="@drawable/active_btn"
            android:fontFamily="@font/fredokaone_regular"
            android:shadowColor="@color/white"
            android:shadowRadius="10"
            />
        <Switch
            android:id="@+id/sensorswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_selector"
            android:switchMinWidth="0dp"
            android:thumbTextPadding="5dp"
            android:paddingVertical="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:weightSum="3">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bar_chart"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:id="@+id/analyzeBtn"
                android:layout_weight="1" />
            <ImageButton
                android:id="@+id/settingBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/setting"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/closeBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/close"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>